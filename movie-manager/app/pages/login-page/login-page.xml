<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Gnarly Movie Manager" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*">
        <StackLayout class="login-wrap">
            <Label text="Username:" />
            <TextField text="{{ Username }}" autocorrect="false" />
            <Label text="Password:" />
            <TextField text="{{ Password }}" secure="true" autocorrect="false" />
            <Label visibility="{{ LoginError ? 'visible' : 'collapsed' }}" text="Invalid username or password" class="login-error" />
            <Button tap="{{ ProcessLogin }}" text="Login" class="btn" />
        </StackLayout>
        <ActivityIndicator busy="{{ IsLoading }}" row="1" horizontalAlignment="center" verticalAlignment="center" />
    </GridLayout>
</Page>